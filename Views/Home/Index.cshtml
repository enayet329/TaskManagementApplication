@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section bg-primary text-white py-5 mb-5 rounded">
    <div class="container text-center">
        <h1 class="display-4 mb-3">
            <i class="fas fa-tasks me-3"></i>Task Manager Pro
        </h1>
        <p class="lead mb-4">Organize your life, boost your productivity</p>
        @if (User.Identity.IsAuthenticated)
        {
            <a asp-controller="Tasks" asp-action="Index" class="btn btn-light btn-lg">
                <i class="fas fa-list me-2"></i>View My Tasks
            </a>
        }
        else
        {
            <div>
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-light btn-lg me-3">
                    <i class="fas fa-user-plus me-2"></i>Get Started
                </a>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-outline-light btn-lg">
                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                </a>
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <i class="fas fa-plus-circle fa-3x text-primary mb-3"></i>
                <h5 class="card-title">Create Tasks</h5>
                <p class="card-text">Easily create and organize your tasks with due dates and descriptions.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <i class="fas fa-filter fa-3x text-success mb-3"></i>
                <h5 class="card-title">Filter & Sort</h5>
                <p class="card-text">Filter by completion status and sort by due date, title, or creation date.</p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card h-100 text-center">
            <div class="card-body">
                <i class="fas fa-check-circle fa-3x text-warning mb-3"></i>
                <h5 class="card-title">Track Progress</h5>
                <p class="card-text">Mark tasks as complete and track your productivity with visual indicators.</p>
            </div>
        </div>
    </div>
</div>

@if (User.Identity.IsAuthenticated)
{
    <div class="row mt-5">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-line me-2"></i>Quick Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex flex-wrap gap-2">
                        <a asp-controller="Tasks" asp-action="Create" class="btn btn-success">
                            <i class="fas fa-plus me-2"></i>Create New Task
                        </a>
                        <a asp-controller="Tasks" asp-action="Index" asp-route-statusFilter="pending" class="btn btn-warning">
                            <i class="fas fa-clock me-2"></i>View Pending Tasks
                        </a>
                        <a asp-controller="Tasks" asp-action="Index" asp-route-statusFilter="completed" class="btn btn-info">
                            <i class="fas fa-check me-2"></i>View Completed Tasks
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}